[
  {
    "name": "theme_info",
    "theme_name": "LRT Lubricants",
    "theme_version": "1.0.0",
    "theme_author": "Matt Boov",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Brand information",
    "settings": [
      {
        "type": "paragraph",
        "content": "Add a brand description to your store's footer."
      },
      {
        "type": "inline_richtext",
        "id": "brand_headline",
        "label": "Headline"
      },
      {
        "type": "richtext",
        "id": "brand_description",
        "label": "Description"
      },
      {
        "type": "image_picker",
        "id": "brand_image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "brand_image_width",
        "min": 50,
        "max": 550,
        "step": 5,
        "default": 100,
        "unit": "px",
        "label": "Image width"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "placeholder": "https://facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "X / Twitter"
      }
    ]
  },
  {
    "name": "Currency format",
    "settings": [
      {
        "type": "header",
        "content": "Currency codes"
      },
      {
        "type": "paragraph",
        "content": "Cart and checkout prices always show currency codes. Example: $1.00 USD."
      },
      {
        "type": "checkbox",
        "id": "currency_code_enabled",
        "label": "Show currency codes",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "notification",
            "label": "Popup notification"
          }
        ],
        "default": "notification",
        "label": "Cart type"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Enable cart note",
        "default": false
      },
      {
        "type": "header",
        "content": "Cart drawer"
      },
      {
        "type": "collection",
        "id": "cart_drawer_collection",
        "label": "Collection",
        "info": "Visible when cart drawer is empty."
      }
    ]
  }
]
