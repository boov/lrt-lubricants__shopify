{
  "arrowParens": "avoid",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false,
  "printWidth": 120,
  "overrides": [
    {
      "files": ["*.scss", "*.liquid"],
      "options": {
        "printWidth": 1000
      }
    }
  ],
  "plugins": ["@shopify/prettier-plugin-liquid"]
}
